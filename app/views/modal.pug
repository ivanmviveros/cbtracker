#modal-combat.modal.fade(tabindex='-1' role='dialog' style='display: none;' aria-hidden='true')
  .modal-dialog.modal-dialog-centered.modal-lg(role='document')
    .modal-content
      .modal-card.card.bg-secondary
        .card-header
          .row.align-items-center
            .col
              h4#modalCenterTitle.card-header-title
                | Combat Simulator
            .col-auto
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') &times;
        .card-body
            form
              .row
                .col-md-6.col-sm-6.px-2.mb-3
                  .form-group  
                    input#combat-name.form-control.form-control(type='text' placeholder='Account address' readonly)
                    input#combat-address(type='hidden')
                  .form-group  
                    select#combat-character.form-control.form-control
                      option(value='') Select character
                  .form-group  
                    select#combat-weapon.form-control.form-control
                      option(value='') Select weapon
                .col-md-6.col-sm-6.px-2.mb-3
                  p#combat-result.text-white(align='center')
              button#btn-simulate.btn.btn-primary.float-right(type='button' onclick='combat_simulate()') Run

